<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".room.workout.WorkoutActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Spinner
        android:background="@drawable/spinner_back"
        android:id="@+id/spinner_excercise"
        android:spinnerMode="dropdown"
        android:autofillHints="choose excercise"
        style="@style/et_style"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_arrow_drop_down"/>
    </FrameLayout>
    <EditText
        android:id="@+id/et_counts"
        android:hint="enter the counts"
        style="@style/et_style"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="bottom|right"
        android:id="@+id/add_excercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Excercise types"/>

</LinearLayout>